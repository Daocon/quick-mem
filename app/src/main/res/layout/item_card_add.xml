<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/white_gray"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10dp"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:elevation="@dimen/_10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/_10dp"
                app:helperTextEnabled="true"
                android:id="@+id/term_til"
                app:helperText="Term"
                app:hintTextColor="@color/light_gray"
                app:helperTextTextColor="@color/gray"
                app:helperTextTextAppearance="@style/TextAppearance.AppCompat.Small">

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|top"
                    android:inputType="text|textMultiLine"
                    android:id="@+id/term_et"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                app:layout_constraintTop_toBottomOf="@+id/term_til"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/_10dp"
                app:helperTextEnabled="true"
                android:id="@+id/definition_til"
                app:helperText="Definition"
                app:hintTextColor="@color/light_gray"
                app:helperTextTextColor="@color/gray"
                app:helperTextTextAppearance="@style/TextAppearance.AppCompat.Small">

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|top"
                    android:inputType="text|textMultiLine"
                    android:id="@+id/definition_et"/>

        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>